@model RecipeApp.Models.RecipeViewModel

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<html>
<body>
    <div class="metro_subheader dark-overlay dark-overlay-2" style="        background-image: url(/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/subheader.jpg)">
        <div class="container">
            <div class="metro_subheader-inner">
                <h1>Recipe Details</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Recipe Details</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Subheader End -->
    <!-- Post Content Start -->
    <div class="section metro_post-single">
        <div class="container">

            <div class="row">
                <div class="col-lg-8">

                    <!-- Content  -->
                    <div class="metro_post-single-wrapper metro_recipe-single-wrapper">

                        <h2 class="entry-title">Planting Season Begins</h2>
                        <div class="metro_rating-wrapper">
                            <div class="metro_rating">
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star active"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <span>4 Stars</span>
                        </div>

                        <div class="metro_post-single-thumb">
                            <img src="~/Upload/@Model.Photo" alt="post">
                            <div class="metro_post-date">
                                <span>@ViewBag.day</span>
                                <span>@ViewBag.Month</span>
                            </div>
                        </div>

                        <!-- Entry Content Start -->
                        <div class="entry-content">
                            <span class="metro_post-meta">
                                <a href="#"> <i class="far fa-user"></i> Michel </a>
                                <a href="blog-details.html"> <i class="far fa-knife-kitchen"></i> 5 Comments</a>
                                <a href="blog-details.html"> <i class="far fa-clock"></i> 55 minutes</a>
                            </span>

                            <p>
                            @Model.Name
                            </p>

                            <div class="row">
                                
                                <div class="col-lg-6">
                                    <div class="metro_ingredients">
                                        <h4>Ingredients</h4>
                                        <ul>
                                            @foreach (var i in Model.Ingridients)
                                            {

                                                <li> @i.Name <span>@i.Quantity</span> </li>
                                            }
                                           
                                        </ul>
                                    </div>
                                </div>
                            </div>



                            <p>
                              @Model.Description
                            </p>
                        </div>
                        <!-- Entry Content End -->

                    </div>

                    <!-- Related Posts -->
                    <div class="metro_related-posts">

                        <h4>Related Recipes</h4>

                        <div class="metro_related-posts-slider">

                            <!-- Recipe Start -->
                            @foreach (var recipe in ViewBag.Recipes)
                            {
                                <article class="metro_post metro_recipe">
                                    <div class="metro_post-thumb">
                                        <a href="/Recipes/RecipeDetails/@recipe.Id">
                                            <img src="~/Upload/@recipe.Photo" alt="recipe">
                                        </a>
                                    </div>
                                    <div class="metro_post-body">
                                        <div class="metro_post-desc">
                                            <span class="metro_post-meta"> <a href="/Recipes/RecipeDetails/@recipe.Id"> <i class="far fa-clock"></i> 45 Minutes </a> <a href="recipe-details.html"> <i class="far fa-knife-kitchen"></i> Expert</a> </span>
                                            <h5> <a href="/Recipes/RecipeDetails/@recipe.Id">@recipe.Name</a> </h5>
                                            <p>@recipe.Description.Substring(0,3)</p>
                                        </div>
                                        <a class="btn-link" href="recipe-details.html"> Read More <i class="fas fa-arrow-right"></i> </a>
                                    </div>
                                </article>
                            }

                           
                           
                         
                        </div>

                    </div>

                    <!-- Comments Form -->
                    

                   

                </div>

                <!-- Sidebar Start -->
                <div class="col-lg-4">
                    <div class="sidebar">

                        <!-- Search Start -->
                        <div class="sidebar-widget widget-search">
                            <form method="post">
                                <div class="metro_search-adv-input">
                                    <input type="text" class="form-control" placeholder="Look for Fruits, Vegetables" name="search" value="">
                                    <button type="submit" name="button"><i class="fa fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                        <!-- Search End -->
                        <!-- Sidebar CTA Start -->
                        <div class="sidebar-widget sidebar-cta">
                            <img src="/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/sidebar-cta.jpg" alt="Call To Action">
                            <div class="sidebar-cta-content">
                                <span>Good Food</span>
                                <h6>Best Quality Food</h6>
                                <a href="shop.html" class="metro_btn-custom">Shop Now</a>
                            </div>
                        </div>
                        <!-- Sidebar CTA End -->
                        <!-- Recent Posts Start -->
                        <div class="sidebar-widget widget-recent-posts">
                            <h5 class="widget-title">Recent Posts</h5>
                            <article class="post">
                                <a href="blog-details.html"><img src="/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/blog/sm/1.jpg" alt="post"></a>
                                <div class="post-content">
                                    <a href="#"> Burgers </a>
                                    <h6> <a href="blog-details.html">Tomato Stuffing with Cumin and Radish</a> </h6>
                                </div>
                            </article>
                            <article class="post">
                                <a href="blog-details.html"><img src="/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/blog/sm/2.jpg" alt="post"></a>
                                <div class="post-content">
                                    <a href="#"> Pizza </a>
                                    <h6> <a href="blog-details.html">Over Baked Pizza With Four Cheese</a> </h6>
                                </div>
                            </article>
                            <article class="post">
                                <a href="blog-details.html"><img src="/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/blog/sm/3.jpg" alt="post"></a>
                                <div class="post-content">
                                    <a href="#"> Fast Food </a>
                                    <h6> <a href="blog-details.html">Grilled Burgers With Tomato Paste</a> </h6>
                                </div>
                            </article>
                            <article class="post">
                                <a href="blog-details.html"><img src="/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/blog/sm/4.jpg" alt="post"></a>
                                <div class="post-content">
                                    <a href="#"> Fast Food </a>
                                    <h6> <a href="blog-details.html">American Style French Fries Air Fried</a> </h6>
                                </div>
                            </article>
                        </div>
                        <!-- Recent Posts End -->
                        <!-- Categories Start -->
                        <div class="sidebar-widget">
                            <h5 class="widget-title"> Post Categories </h5>
                            <ul class="sidebar-widget-list">
                                <li> <a href="#"> Vegan </a> </li>
                                <li> <a href="#"> Breakfast </a> </li>
                                <li> <a href="#"> Pizza </a> </li>
                                <li> <a href="#"> Salads</a> </li>
                                <li> <a href="#"> Drinks  </a> </li>
                                <li> <a href="#"> Bread </a> </li>
                                <li> <a href="#"> Lunch </a> </li>
                                <li> <a href="#"> Dinner </a> </li>
                            </ul>
                        </div>
                        <!-- Categories End -->
                        <!-- Popular Tags Start -->
                        <div class="sidebar-widget">
                            <h5 class="widget-title">Popular Tags</h5>
                            <div class="tagcloud">
                                <a href="#">Health</a>
                                <a href="#">Food</a>
                                <a href="#">Ingredients</a>
                                <a href="#">Organic</a>
                                <a href="#">Farms</a>
                                <a href="#">Green</a>
                                <a href="#">Fiber</a>
                                <a href="#">Supplements</a>
                                <a href="#">Gain</a>
                                <a href="#">Live Stock</a>
                                <a href="#">Harvest</a>
                            </div>
                        </div>
                        <!-- Popular Tags End -->

                    </div>
                </div>
                <!-- Sidebar End -->

            </div>

        </div>
    </div>
    <!-- Product Content End -->
    <!-- Instagram Start -->
    <div class="row no-gutters">
        <div class="col-lg-2 col-md-4 col-sm-4 col-6 p-0">
            <a href="/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/ig/1.jpg" class="gallery-thumb metro_ig-item">
