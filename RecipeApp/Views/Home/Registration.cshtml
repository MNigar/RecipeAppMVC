@model RecipeApp.Models.UserViewModel

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<html>


<body>
    <div class="metro_subheader dark-overlay dark-overlay-2" style="        background-image: url(/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/subheader.jpg)">
        <div class="container">
            <div class="metro_subheader-inner">
                <h1>Registration</h1>
                <nav aria-label="breadcrumb">

                </nav>
            </div>
        </div>
    </div>
    <div class="section metro_post-single">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <form id="Forms" method="post" action="@Url.Action("Registration", "Home")">
                        @Html.AntiForgeryToken()
                        <div class="metro_recipe-submit-section">
                            <div class="metro_recipe-submit-section">
                                <div class="row">
                                    <div class="col-12">
                                        <label>Registration</label>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" class="form-control" name="Name" value="" placeholder="Name">
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <input type="text" class="form-control" name="Surname" value="" placeholder="Surname">
                                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" class="form-control" name="Email" value="" placeholder="Email">
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="password" class="form-control" name="Password" value="" placeholder="Password">
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>


                                </div>
                                <div class="form-group">
                                    <div class="text-center">
                                        <button type="submit" class="mt-4 metro_btn-custom" name="button">Register</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                @*<div class="text-center">
                                    <button type="button" class="mt-4 metro_btn-custom" onclick="location.href='@Url.Action("Registration", "Home")'" name="button">Registration</button>
                                </div>*@
                                <div class="text-center">
                                    <a href="@Url.Action("Login", "Home")">If you  have account,please login</a>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group">

                            <div class="text-center">
                                <button type="button" class="mt-4 metro_btn-custom" onclick="location.href='@Url.Action("Login", "Home")'" name="button">Login</button>
                            </div>
                        </div>*@
                        @if (Session["RegisterError"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                Email already exist
                            </div>
                            Session["RegisterError"] = null;
                        }

                    </form>
                </div>
            </div>

        </div>
        <style>
            .error {
                border-color: red !important;
            }
        </style>
    </div>

</body>
</html>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>

<script src="~/Scripts/Validator.js"></script>

